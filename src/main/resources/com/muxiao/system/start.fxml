<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.muxiao.system.start">
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center>
      <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="280.0" prefWidth="600.0" BorderPane.alignment="CENTER">
          <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
      
          <Button fx:id="login" onAction="#LoginBTNClick" text="登录" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
              <font>
                  <Font size="20.0" />
              </font>
          </Button>
          <Button fx:id="check" onAction="#CheckBTNClick" text="查询" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
              <font>
                  <Font size="20.0" />
              </font>
          </Button>
      </GridPane>
      </center>
      <top>
         <TextField alignment="CENTER" editable="false" style="-fx-background-color: transparent;" text="宿舍管理系统" BorderPane.alignment="CENTER">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
            <BorderPane.margin>
               <Insets top="50.0" />
            </BorderPane.margin>
         </TextField>
      </top>
   </BorderPane>
</VBox>
